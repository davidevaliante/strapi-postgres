{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "Author"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "about": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "aboutArticle": {
      "type": "richtext"
    },
    "post": {
      "via": "author",
      "model": "post"
    }
  }
}
